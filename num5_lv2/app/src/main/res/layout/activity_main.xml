<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:text="验证码登录"
        android:textSize="20dp" />
    <Button
        android:id="@+id/button_login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="账号密码登录"
        android:textColor="#424242"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/edit_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="登录百度账号 精彩永相随"
        android:textColor="#000000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/button_login"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:hint="请输入手机号"
        android:gravity="center"
        android:lines="1"
        android:maxLength="30"
        android:background="@drawable/bg_border" />

    <ImageButton
        android:id="@+id/image_WeChat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/button_login"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/wechat_bg" />

    <ImageButton
        android:id="@+id/image_QQ"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/button_login"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/image_WeChat"
        android:background="@drawable/qq_bg" />

    <ImageButton
        android:id="@+id/image_Sina"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/button_login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/image_WeChat"
        android:background="@drawable/sina_bg" />

    <Button
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/line1"
        android:background="@android:color/transparent"
        android:text="注册"
        android:textColor="#A4A4A4"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="35dp"
        android:text="|"
        android:textColor="#A4A4A4"
        android:textSize="13dp" />

    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/line1"
        android:background="@android:color/transparent"
        android:text="帮助"
        android:textColor="#A4A4A4"
        android:textSize="13dp" />


</RelativeLayout>